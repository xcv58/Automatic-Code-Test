<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/list_bottom_margin"
    android:elevation="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/head_line"
        android:paddingStart="@dimen/icon_left_padding"
        android:paddingEnd="@dimen/icon_left_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/head_line"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/icon_left_padding"
        android:paddingEnd="@dimen/icon_left_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/address_start"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_end"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>